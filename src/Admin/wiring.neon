parameters:
	privileges:
		- ori.administration.entry

services:
	# Auth
	ori.admin.auth.identityRefresher:
		factory: OriCMF\Admin\Auth\AdminIdentityRefresher
		autowired: false
	ori.admin.auth.firewall:
		factory: OriCMF\Admin\Auth\AdminFirewall
		arguments:
			storage: @ori.ui.auth.loginStorage
			refresher: @ori.admin.auth.identityRefresher

	# Dashboard
	ori.admin.dashboard.presenter:
		factory: OriCMF\Admin\Dashboard\DashboardPresenter

	# Error
	ori.admin.error.presenter:
		factory: OriCMF\Admin\Error\ErrorPresenter
	ori.ui.error.forward.presenter:
		setup:
			- addErrorPresenter(':OriCMF\Admin\Error\ErrorPresenter:default', '#(.*)(\\|:)(Admin|Administration)(\\|:)(.*)#')

	# Login
	ori.admin.login.presenter:
		factory: OriCMF\Admin\Login\LoginPresenter
